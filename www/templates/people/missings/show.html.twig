{% extends 'base.html.twig' %}

{% block title %}People
{% endblock %}

{% block body %}
	<h1>People</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ people.id }}</td>
			</tr>
			<tr>
				<th>Name</th>
				<td>{{ people.name }}</td>
			</tr>
			<tr>
				<th>Lastname</th>
				<td>{{ people.lastname }}</td>
			</tr>
			<tr>
				<th>BirthDate</th>
				<td>{{ people.birthDate ? people.birthDate|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
			<tr>
				<th>Height</th>
				<td>{{ people.height }}</td>
			</tr>
			<tr>
				<th>Weight</th>
				<td>{{ people.weight }}</td>
			</tr>
			<tr>
				<th>IsCaptured</th>
				<td>{{ people.isCaptured ? 'Yes' : 'No' }}</td>
			</tr>
			<tr>
				<th>Features</th>
				<td>{{ people.features }}</td>
			</tr>
			<tr>
				<th>CreatedAt</th>
				<td>{{ people.createdAt ? people.createdAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
			<tr>
				<th>UpdatedAt</th>
				<td>{{ people.updatedAt ? people.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
			<tr>
				<th>BirthPlace</th>
				<td>{{ people.birthPlace }}</td>
			</tr>
			<tr>
				<th>ResearchBy</th>
				<td>{{ people.researchBy }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('app_missing_index') }}">back to list</a>

	<a href="{{ path('app_people_edit', {'id': people.id}) }}">edit</a>

	{{ include('people/missings/_delete_form.html.twig') }}
{% endblock %}

