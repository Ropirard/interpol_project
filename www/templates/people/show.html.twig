{% extends 'base.html.twig' %}

{% block title %}People{% endblock %}

{% block body %}
    <h1>People</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ person.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ person.name }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ person.lastname }}</td>
            </tr>
            <tr>
                <th>BirthDate</th>
                <td>{{ person.birthDate ? person.birthDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Height</th>
                <td>{{ person.height }}</td>
            </tr>
            <tr>
                <th>Weight</th>
                <td>{{ person.weight }}</td>
            </tr>
            <tr>
                <th>IsCaptured</th>
                <td>{{ person.isCaptured ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Features</th>
                <td>{{ person.features }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ person.createdAt ? person.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ person.updatedAt ? person.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>BirthPlace</th>
                <td>{{ person.birthPlace }}</td>
            </tr>
            <tr>
                <th>ResearchBy</th>
                <td>{{ person.researchBy }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ person.type }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_people_index') }}">back to list</a>

    <a href="{{ path('app_people_edit', {'id': person.id}) }}">edit</a>

    {{ include('people/_delete_form.html.twig') }}
{% endblock %}
