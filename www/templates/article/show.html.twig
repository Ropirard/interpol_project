{% extends 'base.html.twig' %}

{% block title %}Article | {{ article.title }}{% endblock %}

{% block body %}

{# Bouton retour centré au-dessus du post #}
<div class="max-w-4xl mx-auto mb-6">
    <a class="link-nav inline-flex items-center justify-center w-max mx-auto mt-6" href="{{ path('app_admin_article') }}">
        <svg class="icon-sm mr-2" fill="none" stroke="currentColor" viewbox="0 0 24 24" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7"></path>
        </svg>
        <span>Retour</span>
    </a>
</div>

<div class="max-w-4xl mx-auto bg-white shadow-md rounded-lg p-6 mt-6">
    {% if article.media|length > 0 %}
        <img class="mb-6 w-full h-96 object-cover rounded-lg" src="{{ article.media.first.path }}" alt="{{ article.title }}">
    {% else %}
        <div class="w-full h-96 gradient-placeholder flex items-center justify-center rounded-lg">
            <svg class="w-24 h-24 text-primary" xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" viewbox="0 0 48 48">
                <g fill="none"><path fill="currentColor" d="M44 23.994a2 2 0 0 0-4 0zm-20-16a2 2 0 1 0 0-4zm15 32H9v4h30zm-31-1v-30H4v30zm32-15v15h4v-15zm-31-16h15v-4H9zm0 32a1 1 0 0 1-1-1H4a5 5 0 0 0 5 5zm30 4a5 5 0 0 0 5-5h-4a1 1 0 0 1-1 1zm-31-35a1 1 0 0 1 1-1v-4a5 5 0 0 0-5 5z"/><path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="4" d="m6 35l10.693-9.802a2 2 0 0 1 2.653-.044L32 36m-4-5l4.773-4.773a2 2 0 0 1 2.615-.186L42 31M33 7l8 8m0-8l-8 8"/></g>
            </svg>
        </div>
    {% endif %}

    <div class="flex items-center justify-between mb-4">
        <h1 class="text-3xl font-bold">{{ article.title }}</h1>
        
        {% if app.user and is_granted('ROLE_ADMIN') %}
        <div class="flex gap-2">
            <a class="btn-secondary flex items-center space-x-2" href="{{ path('app_admin_article_edit', {id: article.id}) }}">
                <svg class="icon-with-text" xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" viewBox="0 0 24 24">
                    <path fill="currentColor" fill-rule="evenodd" d="M14 3v2H5v14h14v-9h2v10a1 1 0 0 1-1 1H4a1 1 0 0 1-1-1V4a1 1 0 0 1 1-1zm5.94.354l.707.707a.5.5 0 0 1 0 .707L11.314 14.1l-1.992.98a.3.3 0 0 1-.402-.402l.98-1.992l9.333-9.333a.5.5 0 0 1 .707 0z"/>
                </svg>
            </a>

            <form action="{{ path('app_admin_article_delete', {'id': article.id}) }}" method="post" class="inline" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet article ?')">
                <input type="hidden" name="_token" value="{{ csrf_token('delete_article_' ~ article.id) }}">
                <button type="submit" class="btn-danger flex items-center space-x-2">
                    <svg class="icon-with-text" xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" viewBox="0 0 24 24">
                        <path fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="m20 9l-1.995 11.346A2 2 0 0 1 16.035 22h-8.07a2 2 0 0 1-1.97-1.654L4 9m17-3h-5.625M3 6h5.625m0 0V4a2 2 0 0 1 2-2h2.75a2 2 0 0 1 2 2v2m-6.75 0h6.75"/>
                    </svg>
                </button>
            </form>
        </div>
        {% endif %}
    </div>

    <p class="text-gray-600 text-sm mb-6">Publié le {{ article.createdAt|date('d/m/Y H:i') }}</p>
    <div class="prose mb-6">
        {{ article.content|raw }}
    </div>

    {% if article.people|length > 0 %}
    <h2 class="text-2xl font-bold mb-6 border-b pb-2 text-center">Personnes associées</h2>
    <div class="grid justify-center grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
        {% for person in article.people %}
            <div class="flex flex-col items-center bg-white border border-gray-200 rounded-lg shadow hover:shadow-lg transition p-4 text-center">
                <p class="font-semibold text-gray-800 flex items-center justify-center gap-2">
                    {{ person.lastname|upper }} {{ person.name }}
                    <a href="{{ path('app_missing_show', {id: person.id}) }}" class="inline-flex items-center text-gray-500 hover:text-gray-700 transition">
                        <svg class="w-4 h-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 32 32" fill="none" stroke="currentColor" stroke-width="2">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M22 3h7v7m-1.5-5.5L20 12m-3-7H8a3 3 0 0 0-3 3v16a3 3 0 0 0 3 3h16a3 3 0 0 0 3-3v-9"/>
                        </svg>
                    </a>
                </p>
                <p class="text-sm text-gray-500 mb-2">{{ person.type }}</p>
                {% if person.charges|length > 0 %}
                    <ul class="text-sm text-gray-600 list-disc list-inside">
                        {% for c in person.charges %}
                            <li>{{ c.label }}</li>
                        {% endfor %}
                    </ul>
                {% endif %}
            </div>
        {% endfor %}
    </div>
    {% endif %}
</div>

{# Section commentaires #}
<div class="max-w-4xl mx-auto mt-12">
    {% if app.user %}
        <div class="mt-6 bg-white border border-gray-200 rounded-lg p-6 mb-8">
            <h2 class="text-xl font-semibold mb-4">Laisser un commentaire</h2>
            {{ form_start(commentForm, {
                'action': path('app_comment_create', {id: article.id}),
                'method': 'POST',
                'attr': {'class': 'space-y-4'}
            }) }}
                <div>
                    {{ form_widget(commentForm.content, {'attr': {'class': 'w-full border border-gray-300 rounded-md p-2'}}) }}
                    {% if commentForm.content.vars.errors|length > 0 %}
                        <div class="mt-2 text-sm text-red-600">
                            {{ form_errors(commentForm.content) }}
                        </div>
                    {% endif %}
                </div>
                {{ form_rest(commentForm) }}
                <button type="submit" class="btn-primary w-full flex items-center justify-center space-x-2 mt-2">
                    <span>Publier le commentaire</span>
                </button>
            {{ form_end(commentForm) }}
        </div>
    {% else %}
        <div class="bg-gray-50 border border-gray-200 rounded-lg p-6 mb-8 text-center">
            <p class="text-gray-600 mb-4">Connectez-vous pour laisser un commentaire</p>
            <a href="{{ path('app_login') }}" class="btn-primary inline-flex items-center justify-center space-x-2">
                <span>Se connecter</span>
            </a>
        </div>
    {% endif %}

    {# Liste des commentaires #}
    <div class="space-y-6">
        {% if comments|length > 0 %}
            {% for comment in comments %}
                {% include "partials/_comment.html.twig" with {'comment': comment, 'level': 0, 'article': article} %}
            {% endfor %}
        {% else %}
            <div class="text-center py-12 text-gray-500">
                <svg class="w-16 h-16 mx-auto mb-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
                </svg>
                <p>Aucun commentaire pour le moment. Soyez le premier à commenter !</p>
            </div>
        {% endif %}
    </div>
</div>

{% endblock %}
