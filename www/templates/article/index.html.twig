{% extends 'base.html.twig' %}

{% block title %}Actualité | Interpol{% endblock %}

{% block body %}
<div class="max-w-7xl mx-auto px-4 py-8">
    <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-6 mb-8">
        <form method="get" class="flex flex-col md:flex-row gap-4">
            <input type="text" name="search" value="{{ search }}" placeholder="Rechercher par titre ou contenu" class="w-full md:flex-1 px-4 py-2 border border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none transition-all">
            <button type="submit" class="btn-primary">Rechercher</button>
            <a href="{{ path('app_article') }}" class="btn-secondary">Réinitialiser</a>
        </form>
    </div>

    <div class="flex flex-col gap-6">
        {% for article in articles %}
            <article class="bg-white rounded-2xl shadow-sm border border-gray-100 overflow-hidden flex flex-col md:flex-row h-48 md:h-auto hover:shadow-md transition-shadow">
                
                {# Image taille fixe garantie #}
                <div class="w-72 md:w-64 h-48 flex-shrink-0 bg-gray-200 overflow-hidden">
                    {% if article.media|length > 0 %}
                        <img src="{{ article.media.first.path }}" 
                             alt="{{ article.title }}"
                             class="w-full h-full object-cover block">
                    {% else %}
                        <img src="https://placehold.co/600x400?text=Interpol+News" 
                             alt="Image par défaut"
                             class="w-full h-full object-cover opacity-50 block">
                    {% endif %}
                </div>

                {# Contenu #}
                <div class="p-6 flex flex-col justify-between flex-1 min-w-0">
                    <div>
                        <div class="flex justify-between items-start mb-2 gap-4">
                            <h2 class="text-xl font-bold text-gray-900 truncate">{{ article.title }}</h2>
                            <span class="text-xs font-medium text-gray-500 whitespace-nowrap bg-gray-50 px-2 py-1 rounded border border-gray-100">
                                {{ article.createdAt|date('d/m/Y') }}
                            </span>
                        </div>
                        <p class="text-gray-600 text-sm leading-relaxed">
                            {{ article.content|length > 180 ? article.content|slice(0, 180) ~ '...' : article.content }}
                        </p>
                    </div>

                    <div class="mt-4">
                        <a href="{{ path('app_article_show', {'id': article.id}) }}" class="text-blue-600 hover:text-blue-800 text-sm font-semibold inline-flex items-center">
                            Lire la suite
                            <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                            </svg>
                        </a>
                    </div>
                </div>
            </article>
        {% else %}
            <div class="text-center py-12">
                <p class="text-gray-500">Aucun article trouvé.</p>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
