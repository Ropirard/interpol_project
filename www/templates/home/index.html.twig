{% extends "base.html.twig" %}

{% block title %}Acceuil - Interpol
{% endblock %}

{% block body %}
	<!-- Section hero -->
	<section class="gradient-hero section">
		<div class="container-main">
			<div class="text-center">
				<h1 class="text-5xl md:text-6xl text-gray-900 mb-6">Bienvenue sur Interpol</h1>
				<p class="text-xl md:text-2xl text-gray-600 mb-8 max-w-3xl mx-auto">
					Service national d'enregistrement et d'alerte de personnes recherchées
				</p>
			</div>
		</div>
	</section>

	<!-- Les criminels -->
	<section class="bg-white py-24" id="people">
	<div class="container-main">
		<div class="text-center mb-16">
			<h2 class="text-4xl font-bold text-gray-900 mb-4">
				Personnes récemment recherchées
			</h2>
			<p class="text-lg text-gray-600 max-w-2xl mx-auto">
				Individus activement recherchés par les autorités compétentes.
			</p>
		</div>

		<!-- Cartes -->
		<div class="grid gap-8 md:grid-cols-3">
			{% for criminal in recentCriminals %}
				<div class="group relative overflow-hidden rounded-2xl border border-gray-200 bg-white shadow-sm transition hover:-translate-y-1 hover:shadow-xl">

					<!-- Header -->
					<div class="relative h-56 bg-gray-100">
						<img
							src="/images/dessin.png"
							alt="{{ criminal.name }} {{ criminal.lastname }}"
							class="h-full w-full object-cover grayscale group-hover:grayscale-0 transition"
						/>

						<span class="absolute top-4 left-4 rounded-full bg-red-600 px-3 py-1 text-xs font-semibold text-white">
							Recherché
						</span>
					</div>

					<!-- Body -->
					<div class="p-6">
						<h3 class="text-xl font-semibold text-gray-900">
							{{ criminal.name }} {{ criminal.lastname }}
						</h3>

						<p class="mt-1 text-sm text-gray-500">
							Recherché par
							<span class="font-medium text-gray-700">
								{{ criminal.researchBy }}
							</span>
						</p>


						<!-- Actions -->
						<div class="mt-6 flex items-center justify-between">
							<a href="#"
							   class="text-sm font-medium text-primary hover:underline">
								Voir le dossier
							</a>

							<span class="text-xs text-gray-400">
								ID #{{ criminal.id }}
							</span>
						</div>
					</div>

				</div>
			{% endfor %}
		</div>
	</div>
</section>


