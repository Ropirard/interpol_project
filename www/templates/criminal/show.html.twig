{% extends 'base.html.twig' %}

{% block title %}Criminal{% endblock %}

{% block body %}
    <h1>Criminal</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ criminal.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ criminal.name }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ criminal.lastname }}</td>
            </tr>
            <tr>
                <th>BirthDate</th>
                <td>{{ criminal.birthDate ? criminal.birthDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Height</th>
                <td>{{ criminal.height }}</td>
            </tr>
            <tr>
                <th>Weight</th>
                <td>{{ criminal.weight }}</td>
            </tr>
            <tr>
                <th>IsCaptured</th>
                <td>{{ criminal.isCaptured ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Features</th>
                <td>{{ criminal.features }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ criminal.createdAt ? criminal.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ criminal.updatedAt ? criminal.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>BirthPlace</th>
                <td>{{ criminal.birthPlace }}</td>
            </tr>
            <tr>
                <th>ResearchBy</th>
                <td>{{ criminal.researchBy }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_criminal_index') }}">back to list</a>

    <a href="{{ path('app_criminal_edit', {'id': criminal.id}) }}">edit</a>

    {{ include('criminal/_delete_form.html.twig') }}
{% endblock %}
