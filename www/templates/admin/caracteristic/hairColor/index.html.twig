{% extends 'admin/base.html.twig' %}

{% block title %}Gestion des couleurs de cheveux - Administration{% endblock %}

{% block admin_content %}
	<div class="mb-8">
		<a href="{{ path('app_admin_caracteristic') }}" class="link-nav mb-4 inline-block">
			← Retour à la liste
		</a>
		<h1 class="text-4xl text-gray-900 mb-2">Couleurs de cheveux</h1>
		<p class="text-gray-600">Gérez les couleurs de cheveux disponibles</p>
	</div>

	<div class="mb-6">
		<a href="{{ path('app_hairColor_new') }}" class="bg-accent text-white py-2 px-4 rounded-lg hover:bg-purple-600 transition duration-150">
			+ Ajouter une couleur de cheveux
		</a>
	</div>

	{% if hairColors|length > 0 %}
		<div class="bg-white rounded-lg shadow overflow-hidden">
			<table class="w-full">
				<thead class="bg-gray-100 border-b">
					<tr>
						<th class="px-6 py-3 text-left text-sm font-semibold text-gray-900">Couleur</th>
						<th class="px-6 py-3 text-left text-sm font-semibold text-gray-900">Actions</th>
					</tr>
				</thead>
				<tbody>
					{% for hairColor in hairColors %}
						<tr class="border-b hover:bg-gray-50">
							<td class="px-6 py-4 text-sm text-gray-900">{{ hairColor.label }}</td>
							<td class="px-6 py-4 text-sm space-x-2">
								<a href="{{ path('app_hairColor_edit', { id: hairColor.id }) }}" class="text-yellow-600 hover:text-yellow-900">
									Modifier
								</a>
								<form method="POST" action="{{ path('app_admin_hairColor_delete', { id: hairColor.id }) }}" style="display:inline;" onsubmit="return confirm('Êtes-vous sûr ?');">
									<input type="hidden" name="_token" value="{{ csrf_token('delete_hairColor_' ~ hairColor.id) }}">
									<button type="submit" class="text-red-600 hover:text-red-900">
										Supprimer
									</button>
								</form>
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	{% else %}
		<div class="bg-yellow-50 border border-yellow-200 rounded-lg p-6 text-center">
			<p class="text-gray-600">Aucune couleur de cheveux disponible pour le moment.</p>
			<a href="{{ path('app_hairColor_new') }}" class="text-accent hover:text-purple-600 mt-2 inline-block">
				Créer la première →
			</a>
		</div>
	{% endif %}
{% endblock %}
