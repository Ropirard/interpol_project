{% extends 'admin/base.html.twig' %}

{% block title %}Signalements - Administration
{% endblock %}

{% block admin_content %}
	<div class="min-h-screen bg-main py-8">
		<div class="container-medium">
			{% include "partials/_messages.html.twig" %}

			<div class="mb-8">
				<h1 class="text-4xl font-bold text-gray-900 mb-2">Gestion des signalements</h1>
				<p class="text-gray-600">Examinez et traitez les signalements des utilisateurs</p>
			</div>

			{# Statistiques par statut #}
			<div class="grid grid-cols-4 gap-4 mb-8">
				<div class="card-padded bg-linear-to-br from-yellow-50 to-yellow-100 border-l-4 border-yellow-500">
					<div class="flex items-center justify-between">
						<div>
							<p class="text-sm font-medium text-gray-600">En attente</p>
							<p class="text-3xl font-bold text-yellow-600">{{ statsByStatus.pending }}</p>
						</div>
						<svg class="w-12 h-12 text-yellow-300 opacity-50" fill="none" stroke="currentColor" viewbox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
						</svg>
					</div>
				</div>

				<div class="card-padded bg-linear-to-br from-green-50 to-green-100 border-l-4 border-green-500">
					<div class="flex items-center justify-between">
						<div>
							<p class="text-sm font-medium text-gray-600">Approuvés</p>
							<p class="text-3xl font-bold text-green-600">{{ statsByStatus.approved }}</p>
						</div>
						<svg class="w-12 h-12 text-green-300 opacity-50" fill="none" stroke="currentColor" viewbox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
						</svg>
					</div>
				</div>

				<div class="card-padded bg-linear-to-br from-red-50 to-red-100 border-l-4 border-red-500">
					<div class="flex items-center justify-between">
						<div>
							<p class="text-sm font-medium text-gray-600">Rejetés</p>
							<p class="text-3xl font-bold text-red-600">{{ statsByStatus.rejected }}</p>
						</div>
						<svg class="w-12 h-12 text-red-300 opacity-50" fill="none" stroke="currentColor" viewbox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l-2-2m0 0l-2-2m2 2l2-2m-2 2l-2 2"></path>
						</svg>
					</div>
				</div>

				<div class="card-padded bg-linear-to-br from-blue-50 to-blue-100 border-l-4 border-blue-500">
					<div class="flex items-center justify-between">
						<div>
							<p class="text-sm font-medium text-gray-600">Total</p>
							<p class="text-3xl font-bold text-blue-600">{{ statsByStatus.total }}</p>
						</div>
						<svg class="w-12 h-12 text-blue-300 opacity-50" fill="none" stroke="currentColor" viewbox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4"></path>
						</svg>
					</div>
				</div>
			</div>

			{# Bouton pour voir les signalements en attente #}
			<div class="mb-6">
				<a href="{{ path('app_admin_report_pending') }}" class="btn-primary inline-flex items-center space-x-2">
					<svg class="w-5 h-5" fill="none" stroke="currentColor" viewbox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"></path>
					</svg>
					<span>Voir les signalements en attente ({{ statsByStatus.pending }})</span>
				</a>
			</div>

			{# Table des signalements #}
			<div class="card overflow-x-auto">
				<table class="w-full">
					<thead class="bg-gray-50 border-b border-gray-200">
						<tr>
							<th class="px-6 py-4 text-left text-sm font-semibold text-gray-900">Type</th>
							<th class="px-6 py-4 text-left text-sm font-semibold text-gray-900">Contenu signalé</th>
							<th class="px-6 py-4 text-left text-sm font-semibold text-gray-900">Motif</th>
							<th class="px-6 py-4 text-left text-sm font-semibold text-gray-900">Signalé par</th>
							<th class="px-6 py-4 text-left text-sm font-semibold text-gray-900">Date</th>
							<th class="px-6 py-4 text-left text-sm font-semibold text-gray-900">Statut</th>
							<th class="px-6 py-4 text-left text-sm font-semibold text-gray-900">Actions</th>
						</tr>
					</thead>
					<tbody class="divide-y divide-gray-200">
						{% if reports|length > 0 %}
							{% for report in reports %}
								<tr class="hover:bg-gray-50 transition-colors">
									<td class="px-6 py-4">
										<span class="badge-category">Utilisateur</span>
									</td>
									<td class="px-6 py-4">
										<div class="text-sm text-gray-900 font-medium">ID#{{report.user.id}}</div>
									</td>
									<td class="px-6 py-4">
										<p class="text-sm text-gray-600 max-w-xs truncate">{{ report.typeReport.label }}</p>
									</td>
									<td class="px-6 py-4">
										<p class="text-sm text-gray-900 font-medium">{{ report.user.lastname|upper }}
											{{ report.user.name }}</p>
										<p class="text-xs text-gray-500">{{ report.user.email }}</p>
									</td>
									<td class="px-6 py-4">
										<p class="text-sm text-gray-600">{{ report.createdAt|date('d/m/Y') }}</p>
										<p class="text-xs text-gray-500">{{ report.createdAt|date('H:i') }}</p>
									</td>
									<td class="px-6 py-4">
										{% if report.statut == 'en cours' %}
											<span class="badge-warning">En attente</span>
										{% elseif report.statut == 'approuvé' %}
											<span class="badge-success">Approuvé</span>
										{% elseif report.statut == 'rejecté' %}
											<span class="badge-danger">Rejeté</span>
										{% else %}
											<span class="badge-secondary">Fermé</span>
										{% endif %}
									</td>
									<td class="px-6 py-4">
										<a href="{{ path('app_admin_report_show', {id: report.id }) }}" class="link-nav text-sm font-medium">
											Voir détails →
										</a>
									</td>
								</tr>
							{% endfor %}
						{% else %}
							<tr>
								<td colspan="7" class="px-6 py-8 text-center text-gray-500">
									<svg class="w-12 h-12 mx-auto mb-2 text-gray-400" fill="none" stroke="currentColor" viewbox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m7 0a9 9 0 11-18 0 9 9 0 0118 0z"></path>
									</svg>
									Aucun signalement
								</td>
							</tr>
						{% endif %}
					</tbody>
				</table>
			</div>
		</div>
	</div>
{% endblock %}
