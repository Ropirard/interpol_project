{% extends 'base.html.twig' %}

{% block title %}Mon compte - Interpol
{% endblock %}

{% block body %}
	<div class="min-h-screen bg-main py-8">
		<div
			class="container-medium">
			{% include "partials/_messages.html.twig" %} 

			<div class="mb-8">
				<h1 class="text-4xl font-bold text-gray-900 mb-2">Mon compte</h1>
				<p class="text-gray-600">Gérez vos informations de profil</p>
			</div>

			<div
				class="grid grid-cols-1 lg:grid-cols-3 gap-6">
				{# Sidebar - Infos principales #}
				<div class="lg:col-span-1">
					<div class="card card-padded sticky top-24">
						<div class="text-center mb-6">

							<div class="w-24 h-24 rounded-full bg flex items-center justify-center text-black font-bold text-4xl mx-auto mb-4">
								{{ app.user.name|slice(0, 1)|upper }}
							</div>

							<h2 class="text-2xl font-bold text-gray-900">{{ app.user.lastname|upper }} {{ app.user.name }} </h2>
                            
							<p class="text-gray-600 text-sm">{{ app.user.email }}</p>
						</div>

						<div class="border-t border-gray-200 pt-6 space-y-4">
							<div>
								<p class="mt-4 text-sm font-semibold text-gray-700 mb-1">Inscrit depuis</p>
								<p class="text-gray-900">{{ app.user.createdAt|date('d/m/Y') }}</p>
							</div>
							<div>
								<p class="text-sm font-semibold text-gray-700 mb-1">Statut</p>
								<span class="badge-success">
									{% if app.user.isActive %}
										Actif
									{% else %}
										Inactif
									{% endif %}
								</span>
							</div>
							{% if is_granted('ROLE_ADMIN') %}
								<div>
									<p class="text-sm font-semibold text-gray-700 mb-1">Rôle</p>
									<span class="badge-category">Administrateur</span>
								</div>
							{% endif %}
						</div>

						<div class="border-t border-gray-200 pt-6 mt-6">
							<a href="{{ path('app_profil_edit') }}" class="btn-primary w-full text-center flex items-center justify-center space-x-2">
								<svg class="w-5 h-5" fill="none" stroke="currentColor" viewbox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
								</svg>
								<span>Modifier mon profil</span>
							</a>
						</div>
					</div>
				</div>

				{# Contenu principal - Détails #}
				<div class="lg:col-span-2">
					<div class="card card-padded mb-6">
						<h3 class="text-2xl font-bold text-gray-900 mb-6">Informations personnelles</h3>

						<div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
							<div>
								<p class="text-sm font-semibold text-gray-700 mb-2">Nom</p>
								<p class="text-lg text-gray-900 font-medium">{{ app.user.lastname|upper }}</p>
							</div>
                            <div>
								<p class="text-sm font-semibold text-gray-700 mb-2">Prénom</p>
								<p class="text-lg text-gray-900 font-medium">{{ app.user.name }}</p>
							</div>
							<div>
								<p class="text-sm font-semibold text-gray-700 mb-2">Email</p>
								<p class="text-lg text-gray-900 font-medium">{{ app.user.email }}</p>
							</div>
                            <div>
								<p class="text-sm font-semibold text-gray-700 mb-2">Numéro de télephone</p>
								<p class="text-lg text-gray-900 font-medium">{{ app.user.phoneNumber }}</p>
							</div>
                            <div>
								<p class="text-sm font-semibold text-gray-700 mb-2">Numéro d'identité</p>
								<p class="text-lg text-gray-900 font-medium">{{ app.user.identityNumber }}</p>
							</div>
						</div>
					</div>

					{# Statistiques #}
                    <!--TODO: Signalement -->
					<div class="grid grid-cols-2 gap-4">
						<div class="card card-padded text-center">
							<p class="text-sm font-medium text-gray-600 mb-2">Signalements effectuées</p>
							<p class="text-3xl font-bold text-primary">10</p>
						</div>
					</div>
				</div>
			</div>


		</div>
	</div>
{% endblock %}
